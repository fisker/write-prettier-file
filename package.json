{
  "name": "write-prettier-file",
  "version": "1.2.3",
  "description": "write prettier formatted file",
  "bugs": {
    "url": "https://github.com/fisker/write-prettier-file/issues"
  },
  "repository": "fisker/write-prettier-file",
  "license": "MIT",
  "author": {
    "name": "fisker Cheung",
    "email": "lionkay@gmail.com",
    "url": "https://www.fiskercheung.com/"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "main": "dist/index.js",
  "scripts": {
    "build": "rollup --config",
    "clean": "run-p clean:*",
    "clean:dist": "del-cli dist",
    "dist": "run-p dist:*",
    "dist:npm": "np --yolo --no-yarn",
    "format": "run-p format:*",
    "format:eslint": "yarn lint:eslint --fix",
    "format:markdown": "yarn lint:markdown --fix",
    "format:prettier": "yarn lint:prettier --write",
    "format:sort-package-json": "sort-package-json \"package.json\" \"packages/*/package.json\"",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint \"**/*.{js,mjs,vue}\"",
    "lint:markdown": "markdownlint \"**/*.md\" --ignore \"**/node_modules/**\"",
    "lint:prettier": "prettier \"**/*.{css,html,js,json,less,md,scss,ts,vue,yaml,yml}\" --check",
    "release": "run-s clean lint build test format dist",
    "test": "ava",
    "test-coverage": "nyc ava"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "fs-extra": "8.1.0",
    "prettier-format": "1.1.0"
  },
  "devDependencies": {
    "@babel/preset-env": "7.7.4",
    "@commitlint/cli": "8.2.0",
    "@fisker/commitlint-config": "1.1.4",
    "@fisker/eslint-config": "1.3.7",
    "@fisker/husky-config": "1.1.5",
    "@fisker/lint-staged-config": "1.0.8",
    "@fisker/prettier-config": "1.0.24",
    "ava": "2.4.0",
    "babel-plugin-transform-async-to-promises": "0.8.15",
    "cz-conventional-changelog": "3.0.2",
    "dedent": "0.7.0",
    "del-cli": "3.0.0",
    "eslint": "6.7.1",
    "esm": "3.2.25",
    "husky": "3.1.0",
    "lint-staged": "9.5.0",
    "markdownlint-cli": "0.19.0",
    "npm-run-all": "4.1.5",
    "nyc": "14.1.1",
    "prettier": "1.19.1",
    "rollup": "1.27.5",
    "rollup-plugin-babel": "4.3.3",
    "sort-package-json": "1.24.0",
    "tempy": "0.3.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "ava": {
    "verbose": true,
    "require": "esm"
  },
  "home": "https://github.com/fisker/write-prettier-file#readme",
  "nyc": {
    "require": "esm",
    "reporter": [
      "lcov",
      "text"
    ],
    "include": [
      "src/**"
    ]
  }
}
